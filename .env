# Application settings
# Replace with a long, random string for security. You can generate one using: python -c 'import secrets; print(secrets.token_hex(24))'
SECRET_KEY=YOUR_SECRET_KEY_HERE
PORT=5000

# MySQL Database Settings
# Replace with your database host (e.g., localhost or a remote IP/domain)
DB_HOST=localhost
# Replace with your database username
DB_USER=your_db_user
# Replace with your database password
DB_PASSWORD=your_db_password
# Replace with your database name
DB_NAME=your_db_name
DB_PORT=3306

# Frontend settings (Defaults are usually fine for local development)
REACT_APP_API_URL=http://localhost:5000/api
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# React App Settings
REACT_APP_ENV=development

# API Keys
# Replace with a long, random string for Flask session security
FLASK_SECRET_KEY=YOUR_FLASK_SECRET_KEY
# Replace with your Gemini API Key (obtained from Google AI Studio or Google Cloud)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
# Replace with your Google Maps API Key (obtained from Google Cloud Console)
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE
